<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="myVideosVar"
            type="practice.english.n2l.database.bao.MyVideos" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:baselineAligned="false">
                            <TextView
                                android:layout_weight="10"
                                android:id="@+id/TvQuizId"
                                style="@style/white_small_text_style"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimaryDark"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"/>
                            <TextView
                                android:layout_weight="90"
                                android:id="@+id/TvMo"
                                style="@style/black_small_text_style"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimaryDark"
                                android:padding="5dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:text="@{myVideosVar.practiceName}"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:baselineAligned="false"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp">
                        <TextView
                            android:layout_weight="0.5"
                            style="@style/white_small_text_style"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginEnd="3dp"
                            android:text="@string/label_type"
                            android:background="@drawable/purple_border"/>
                        <TextView
                            android:layout_weight="0.5"
                            style="@style/black_small_text_style"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginStart="3dp"
                            android:text="@string/label_date"
                            android:background="@drawable/purple_border"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:baselineAligned="false">
                        <TextView
                            android:layout_weight="0.5"
                            style="@style/white_small_text_style"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginEnd="3dp"
                            android:background="@color/colorPrimaryDark"
                            android:text="@{myVideosVar.singleMulti==1 ? @string/label_single : @string/label_multi}"/>
                        <TextView
                            android:layout_weight="0.5"
                            style="@style/black_small_text_style"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginEnd="3dp"
                            android:background="@color/colorPrimaryDark"
                            android:text="@{myVideosVar.practiceDate}"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:baselineAligned="false"
                        android:visibility="@{myVideosVar.singleMulti==1 ? android.view.View.GONE : android.view.View.VISIBLE}">
                        <TextView
                            style="@style/white_small_text_style"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginEnd="3dp"
                            android:background="@color/colorPrimaryDark"
                            android:text="@{myVideosVar.friendName}"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:baselineAligned="false">
                        <ImageView
                            android:paddingHorizontal="@dimen/small_padding"
                            android:id="@+id/ImgDelete"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_delete"
                            tools:ignore="ContentDescription"
                            android:layout_alignParentStart="true"
                          />
                        <ImageView
                            android:paddingHorizontal="@dimen/small_padding"
                            android:id="@+id/ImgShare"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_share"
                            tools:ignore="ContentDescription"
                            android:layout_centerHorizontal="true"
                            android:visibility="visible"/>
                        <ImageView
                            android:paddingHorizontal="@dimen/small_padding"
                            android:id="@+id/ImgUpload"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_upload"
                            tools:ignore="ContentDescription"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"/>
                        <ImageView
                            android:paddingHorizontal="@dimen/small_padding"
                            android:id="@+id/ImgDownload"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_download"
                            tools:ignore="ContentDescription"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"/>
                        <ImageView
                            android:layout_gravity="end"
                            android:paddingHorizontal="@dimen/small_padding"
                            android:id="@+id/ImgPlay"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_video_play"
                            tools:ignore="ContentDescription"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>