<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="#EFEFEF" />
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#EFEFEF"/>
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="12dp">
        <layer-list>
            <item android:width="12dp" android:height="12dp"  android:gravity="center" android:bottom="12dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/flatBlueDark" />
                        <stroke android:color="@color/flatBlueDark" android:width="1dp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="20dp" android:height="10dp" android:bottom="21dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="#EFEFEF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>